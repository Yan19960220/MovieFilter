<%- include('partials/header'); -%>

<section id="main">
    <div id='app' class="container">
        <h2 class="display-3">Register</h2>
        <div class="row md-form">
            <form action="/api/users/" method="POST" class="col-sm-12 col-md-6 container">
                <div class="row justify-content-center">
                    <div class="col-6 col-md-12">
                        <label for="usernameInput">Choice your name : </label>
                        <input id="usernameInput" type="text" class="form-control" name="username" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-md-12">
                        <label for="passwordInput">choose the password :</label>
                        <input id="passwordInput" type="password" class="form-control" name="password" />
                    </div>
                    <div class="col-sm-6 col-md-12">
                        <label for="passwordConfirmationInput">Confirm password:</label>
                        <input id="passwordConfirmationInput" type="password" class="form-control" name="password_confirmation" />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <input  type="submit" form="confirming" value="Confirmer" class="btn btn-warning btn-lg btn-block" />
                    </div>
                </div>
            </form>
        </div>
    
    </div>
</section>

<%- include('partials/footer'); -%>