<%- include('partials/header'); -%>

<section id="main">
    <div id='app' class="container">
        <h1 class="display-3">Login</h1>
        <div class="row">
            <form action="/home" method="GET" class="col-sm-12 col-md-6 container">
                <div class="row justify-content-center">
                    <div class="col-6 col-md-12">
                        <label for="usernameInput">Nom d'utilisateur: </label>
                        <input id="usernameInput" type="text" class="form-control" name="username" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-md-12">
                        <label for="passwordInput">Mot de passe:</label>
                        <input id="passwordInput" type="password" class="form-control" name="password" />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-6">
                        <input type="submit" value="submit" class="btn btn-warning" />
                    </div>
                    <div class="col-6">
                        <input type="submit" form="registering" value="register" class="btn btn-warning" />
                    </div>
                </div>
            </form>
            <form id="registering" action="/register" method="get">
            </form>    
        </div>
    </div>
</section>

<%- include('partials/footer'); -%>